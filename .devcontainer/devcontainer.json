{
    "name": "esxi-lab-provider dev",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/go:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers-extra/features/ansible:2": {},
        "ghcr.io/robbert229/devcontainer-features/opentofu:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
        "ghcr.io/dhoeric/features/google-cloud-cli:1": {},
        "ghcr.io/devcontainers-extra/features/pre-commit:2": {}
    },
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=${localEnv:USERPROFILE}/.local/share/tunnel.conf,target=/etc/wireguard/wg0.conf,type=bind,readonly"
    ],
    "runArgs": [
        "--memory=8g",
        "--cpus=4",
        "--cap-add=NET_ADMIN",
        "--cap-add=SYS_MODULE",
        "--sysctl=net.ipv4.conf.all.src_valid_mark=1"
    ],
    "postStartCommand": "sudo apt-get update && sudo apt-get install -y wireguard-tools",
    "customizations": {
        "vscode": {
            "extensions": [
                "opentofu.vscode-opentofu"
            ]
        }
    }
}
