# OPNsense Connection
opnsense_url        = "https://192.168.1.1"
opnsense_api_key    = "your-api-key-here"
opnsense_api_secret = "your-api-secret-here"

# WireGuard Server
wireguard_server_name           = "WG"
wireguard_server_public_key     = "server-public-key-here"
wireguard_server_private_key    = "server-private-key-here"
wireguard_server_port           = 51820
wireguard_public_endpoint       = "203.0.113.1:51820"
wireguard_server_mtu            = -1
wireguard_server_dns            = []
wireguard_server_tunnel_address = "10.10.10.1/24"

# Existing peer UUIDs to keep attached to the server
# wireguard_existing_peer_ids = ["uuid-1", "uuid-2"]

# Peer tunnel addresses (public keys are managed by the Go application)
peer1_tunnel_address = "10.10.10.101/32"
peer2_tunnel_address = "10.10.10.102/32"
peer3_tunnel_address = "10.10.10.103/32"

